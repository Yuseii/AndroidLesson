<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.yusei.calc.MainActivity"
    android:padding="0dp"
    >


    <TextView
        android:id="@+id/Screen"
        android:layout_width="fill_parent"
        android:layout_height="120sp"
        android:gravity="right|bottom"
        android:textSize="80sp"
        android:text="0" />
    <Button
        android:id="@+id/button_C"
        style="@style/Button_basic_style"
        android:layout_below="@+id/Screen"
        android:text="C"
         />

    <Button
        android:id="@+id/button_sp"
        style="@style/Button_basic_style"
        android:layout_marginLeft="96sp"
        android:layout_below="@+id/Screen"
        android:text="+/-"
        />

    <Button
        android:id="@+id/button_percent"
        style="@style/Button_basic_style"
        android:layout_marginLeft="192sp"
        android:layout_below="@+id/Screen"
        android:text="%"
        />

    <Button
        android:id="@+id/button_devided"
        style="@style/Button_orange"
        android:layout_marginLeft="288sp"
        android:layout_below="@+id/Screen"
        android:text="รท"
        />

    <Button
        android:id="@+id/button_7"
        style="@style/Button_other"
        android:layout_below="@+id/button_C"
        android:textSize="35sp"
        android:text="7"
        />

    <Button
        android:id="@+id/button_8"
        style="@style/Button_other"
        android:layout_below="@+id/button_sp"
        android:layout_marginLeft="96sp"
        android:text="8"
        />

    <Button
        android:id="@+id/button_9"
        style="@style/Button_other"
        android:layout_marginLeft="192sp"
        android:layout_below="@+id/button_percent"
        android:text="9"
        />

    <Button
        android:id="@+id/button_multiply"
        style="@style/Button_orange"
        android:layout_marginLeft="288sp"
        android:layout_below="@+id/button_devided"
        android:text="ร"
        />

    <Button
        android:id="@+id/button_4"
        style="@style/Button_other"
        android:layout_below="@+id/button_7"
        android:text="4"
        />

    <Button
        android:id="@+id/button_5"
        style="@style/Button_other"
        android:layout_below="@+id/button_8"
        android:layout_marginLeft="96sp"
        android:text="5"
        />

    <Button
        android:id="@+id/button_6"
        style="@style/Button_other"
        android:layout_marginLeft="192sp"
        android:layout_below="@+id/button_9"
        android:text="6"
        />

    <Button
        android:id="@+id/button_sub"
        style="@style/Button_orange"
        android:layout_marginLeft="288sp"
        android:layout_below="@+id/button_multiply"
        android:text="-"
        />

    <Button
        android:id="@+id/button_1"
        style="@style/Button_other"
        android:layout_below="@+id/button_4"
        android:text="1"
        />

    <Button
        android:id="@+id/button_2"
        style="@style/Button_other"
        android:layout_below="@+id/button_5"
        android:layout_marginLeft="96sp"
        android:text="2"
        />

    <Button
        android:id="@+id/button_3"
        style="@style/Button_other"
        android:layout_marginLeft="192sp"
        android:layout_below="@+id/button_6"
        android:text="3"
        />

    <Button
        android:id="@+id/button_add"
        style="@style/Button_orange"
        android:layout_marginLeft="288sp"
        android:layout_below="@+id/button_sub"
        android:text="+"
        />

    <Button
        android:id="@+id/button_0"
        android:layout_width="192sp"
        android:layout_height="96sp"
        android:layout_below="@+id/button_1"
        android:textSize="35sp"
        android:background="#FFFFFF"
        android:text="0"

        />

    <Button
        android:id="@+id/button_del"
        style="@style/Button_other"
        android:layout_marginLeft="192sp"
        android:layout_below="@+id/button_3"
        android:text="."
        />

    <Button
        android:id="@+id/button_equal"
        style="@style/Button_orange"
        android:layout_marginLeft="288sp"
        android:layout_below="@+id/button_add"
        android:text="="
        />

</RelativeLayout>
